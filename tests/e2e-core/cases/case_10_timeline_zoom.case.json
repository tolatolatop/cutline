{
  "id": "case_10_timeline_zoom",
  "name": "时间轴缩放与多 Clip 操作",
  "description": "添加多个 clip，切换缩放级别，验证缩放按钮和时间轴正常工作",
  "steps": [
    { "action": "launch" },
    { "action": "handleDirectoryPicker", "params": { "dir": "$TEMP_DIR" } },
    { "action": "handlePrompt", "params": { "value": "ZoomTest" } },
    { "action": "clickNewProject" },
    { "action": "waitForSelector", "params": { "testId": "project-info", "timeout": 10000 } },

    { "action": "handleFilePicker", "params": { "fixtures": ["videos/sample.mp4", "images/sample.png"] } },
    { "action": "clickImport" },
    {
      "action": "waitForTaskState",
      "params": { "kind": "thumb", "state": "succeeded", "timeout": 30000 }
    },
    { "action": "assertAssetCount", "params": { "expected": 2 } },

    { "action": "selectAsset", "params": { "index": 0 } },
    { "action": "clickAddToTimeline" },
    { "action": "waitMs", "params": { "ms": 500 } },
    { "action": "selectAsset", "params": { "index": 0 } },
    { "action": "clickAddToTimeline" },
    { "action": "waitMs", "params": { "ms": 500 } },
    { "action": "selectAsset", "params": { "index": 0 } },
    { "action": "clickAddToTimeline" },
    { "action": "waitMs", "params": { "ms": 500 } },
    { "action": "assertClipCount", "params": { "expected": 3 } },

    { "action": "clickZoom", "params": { "level": 50 } },
    { "action": "waitMs", "params": { "ms": 200 } },
    { "action": "assertSelectorVisible", "params": { "testId": "timeline-view" } },

    { "action": "clickZoom", "params": { "level": 200 } },
    { "action": "waitMs", "params": { "ms": 200 } },
    { "action": "assertClipCount", "params": { "expected": 3 } },

    { "action": "clickZoom", "params": { "level": 100 } },
    { "action": "waitMs", "params": { "ms": 200 } },

    { "action": "clickClipByIndex", "params": { "index": 2 } },
    { "action": "waitMs", "params": { "ms": 200 } },
    { "action": "clickDeleteClip" },
    { "action": "waitMs", "params": { "ms": 500 } },
    { "action": "assertClipCount", "params": { "expected": 2 } },

    { "action": "screenshot", "params": { "name": "zoom-and-clips" } },
    { "action": "close" }
  ]
}
